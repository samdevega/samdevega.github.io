---
const { date, title, url } = Astro.props
const formattedDate = date.toISOString().split('T')[0]
---
<li><a href={url}>
  <h5>{title}</h5>
  <small>{formattedDate}</small>
</a></li>

<style>
  li {
    display: flex;
    align-items: stretch;
    margin: 0;
  }
  a {
    box-shadow: 0 0 1px #aaaaaa;
    color: inherit;
    display: block;
    padding: 1rem 1.5rem;
    text-decoration: none;
    width: 100%;
  }
  a:hover {
    box-shadow: 0 0 1px #bb6633;
  }
</style>