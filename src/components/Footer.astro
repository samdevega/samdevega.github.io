---
import { getLangFromUrl, useTranslations } from '../i18n/utils'
import { site } from '../constants'
import Icon from './Icon.astro'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const size = '2rem'
---
<footer>
  <div>
    <span>{t('footer.findme')}</span>
    <ul>
      <li>
        <a href='https://www.github.com/samdevega' title='GitHub'>
          <Icon size={size} name='github' />
        </a>
      </li>
      <li>
        <a href='https://www.linkedin.com/in/samdevega' title='LinkedIn'>
          <Icon size={size} name='linkedin' />
        </a>
      </li>
    </ul>
  </div>
  <span>{site}</span>
</footer>

<style define:vars={{size}}>
  footer {
    align-items: center;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    outline: 1px solid rgba(170, 170, 170, 0.3);
    padding: 1rem;
  }
  div {
    align-content: center;
    display: flex;
    gap: 0.5rem;
  }
  span {
    line-height: 2rem;
  }
  ul {
    display: flex;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  li {
    height: 2rem;
  }
  a {
    color: inherit;
    display: inline-block;
    height: var(--size);
    width: var(--size);
  }
  a:hover {
    color: #bb6633;
  }
</style>