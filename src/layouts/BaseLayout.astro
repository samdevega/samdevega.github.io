---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { getLangFromUrl, useTranslations } from '../i18n/utils'

const { pageTitle } = Astro.props
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" href="/fonts/BookerlyLight.ttf" as="font" type="font/ttf">
    <link rel="preload" href="/fonts/PlayfairDisplay.ttf" as="font" type="font/ttf">
    <link rel="preload" href="/fonts/PlayfairDisplayItalic.ttf" as="font" type="font/ttf">
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={t('site_description')}>
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>